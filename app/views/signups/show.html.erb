<% content_for :title, "Payment Due" %>

<table class="signup"><tr>

<td width=220px><h2>Team</h2>
<%=h @signup.team_sex %><br />
<%=h @signup.team_level %>
</td>

<% unless @signup.preferred_school.blank? %>
	<td width=220px><h2>School</h2>
	<%=h @signup.preferred_school %><br />
	</td>
<% end %>


<td><h2>Coach</h2>
<table>
	<tr>
		<td>Name</td>
		<td><%=h @signup.coach_name %></td>
	</tr>
	<tr>
	  	<td>Phone</td>
	  	<td><%=h @signup.coach_phone %></td>
	</tr>
	<tr>
	  	<td>Email</td>
	  	<td><%=h @signup.coach_email %></td>
	</tr>
	<tr>
	  	<td>Address</td>
	  	<td><%=h @signup.coach_address %></td>
	</tr>
</table>
</td>

<td width=200px><h2>Paypal</h2>
	Total: $<%= @signup.price %><br/>
	<form name="_xclick" action="https://www.paypal.com/cgi-bin/webscr" method="post">
	<input type="hidden" name="cmd" value="_xclick">
	<input type="hidden" name="business" value="paypal@meridianpal.org">
	<input type="hidden" name="currency_code" value="USD">
	<input type="hidden" name="item_name" value="3 on 3 Basketball Tournament (id=<%= @signup.id -%>)">
	<input type="hidden" name="amount" value="<%= @signup.price -%>">
	<input type="image" src="http://www.paypal.com/en_US/i/btn/btn_buynow_LG.gif" border="0" name="submit" alt="Make payments with PayPal - it's fast, free and secure!">
	</form>
</td>

<td width=300px>
<h2>Check</h2>
Meridian Police Activities League<br />
250 N. Baltic Pl. Suite A<br />
Meridian, Idaho 83642<br />
Memo: PAL Basketball Invoice: <%= @signup.id -%>
</td>

</tr></table>

<h2>Players</h2>
<table>
	<tr>
		<th>Name</th>
		<th>Birthday</th>
		<th>Phone</th>
		<th>Email</th>
		<th>Address</th>
		<th>Shirt size</th>
	</tr>
	<tr>
  		<td><%=h @signup.player1_name %></td>
	  	<td><%=h "#{@signup.player1_dob_month}/#{@signup.player1_dob_day}/#{@signup.player1_dob_year}" %></td>
	  	<td><%=h @signup.player1_address %></td>
	  	<td><%=h @signup.player1_phone %></td>
	  	<td><%=h @signup.player1_email %></td>
		<td><%=h @signup.player1_tshirt_size %></td>
	</tr>
	<tr>
  		<td><%=h @signup.player2_name %></td>
	  	<td><%=h "#{@signup.player2_dob_month}/#{@signup.player2_dob_day}/#{@signup.player2_dob_year}" %></td>
	  	<td><%=h @signup.player2_address %></td>
	  	<td><%=h @signup.player2_phone %></td>
	  	<td><%=h @signup.player2_email %></td>
		<td><%=h @signup.player2_tshirt_size %></td>
	</tr>
	<tr>
  		<td><%=h @signup.player3_name %></td>
	  	<td><%=h "#{@signup.player3_dob_month}/#{@signup.player3_dob_day}/#{@signup.player3_dob_year}" %></td>
	  	<td><%=h @signup.player3_address %></td>
	  	<td><%=h @signup.player3_phone %></td>
	  	<td><%=h @signup.player3_email %></td>
		<td><%=h @signup.player3_tshirt_size %></td>
	</tr>
	<% if !@signup.player4_name.empty? %>
	<tr>
  		<td><%=h @signup.player4_name %></td>
	  	<td><%=h "#{@signup.player4_dob_month}/#{@signup.player4_dob_day}/#{@signup.player4_dob_year}" %></td>
	  	<td><%=h @signup.player4_address %></td>
	  	<td><%=h @signup.player4_phone %></td>
	  	<td><%=h @signup.player4_email %></td>
		<td><%=h @signup.player4_tshirt_size %></td>
	</tr>
	<% end %>
</table>

<% if @auth_global %>
	<%= link_to 'Edit', edit_signup_path(@signup) %> |
	<%= link_to 'Back', signups_path %>
<% end %>
